{% extends 'base.html.twig' %}

{% block title %}Do Now{% endblock %}

{% block body %}
<div class="container">

  <div id="create-modal" class="modal">
    <div class="modal-content">
      <button class="close-button">×</button>
      <button id="create-list-button">Créer une liste</button>
      <button id="create-note-button">Créer une note</button>
    </div>
  </div>

  <div id="list-modal" class="modal">
    <div class="modal-content">
      <button class="close-button">×</button>
      <input type="text" id="list-title" placeholder="Titre de la liste" />
      <input type="text" id="task-input" placeholder="Tâche" />
      <button id="add-task-button">Ajouter une tâche</button>
      <ul id="task-list"></ul>
      <button id="validate-list-button">Valider</button>
      <button id="cancel-list-button">Annuler</button>
    </div>
  </div>

  <div id="note-modal" class="modal">
    <div class="modal-content">
      <button class="close-button">×</button>
      <input type="text" id="note-title" placeholder="Titre de la note" />
      <textarea id="note-content" placeholder="Contenu de la note"></textarea>
      <button id="validate-note-button">Valider</button>
      <button id="cancel-note-button">Annuler</button>
    </div>
  </div>

  <button id="add-button">+</button>

</div>

{% endblock %}
